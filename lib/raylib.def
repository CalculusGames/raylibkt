headers = raylib.h raymath.h rcamera.h rgestures.h rlgl.h utils.h
package = raylib.internal

compilerOpts = -Ilib/raylib/src
linkerOpts = -lraylib
linkerOpts.mingw = -Llib/mingw
linkerOpts.linux = -Llib/linux
linkerOpts.macos = -Llib/osx

staticLibraries = libraylib.a
libraryPaths.mingw = lib/mingw
libraryPaths.linux = lib/linux
libraryPaths.macos = lib/osx